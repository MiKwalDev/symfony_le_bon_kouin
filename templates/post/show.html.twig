{% extends 'base.html.twig' %}

{% block title %}Post show{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <section class="border-2">
        <h1 class="text-2xl font-bold text-center">{{ post.title }}</h1>
        <p>Vendeur: {{ post.user.pseudo }}</p>
        <p class="text-center mt-3">{{ post.description }}</p>
        <p class="text-center mt-3">{{ post.price }} â‚¬</p>
    </section>
    <section>
        {% if app.user %}
            <div class="pt-5">
                {{ form(form) }}
            </div>
        {% endif %}
        {% for commentary in post.commentaries %}
            <article class="mt-5 p-3 border-2">
                <h2 class="text-xl font-bold text-center">Commentaire de {{ commentary.user.pseudo }}</h2>
                <p>{{ commentary.content }}</p>
            </article>
        {% endfor %}
    </section>
</div>
{% endblock %}