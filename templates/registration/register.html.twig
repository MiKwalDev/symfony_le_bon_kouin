{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="mx-auto w-3/6">
    
        <h1 class="text-2xl font-bold text-center mb-2">Register</h1>

        <div class="flex justify-center">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}

            <div class="validation text-end mt-2">
                <button type="submit" class="rounded-full bg-indigo-600 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Register</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
