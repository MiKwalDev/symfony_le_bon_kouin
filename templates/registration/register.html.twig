{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="mx-auto w-3/6">
    
        <h1 class="text-2xl font-bold text-center mb-2">S'inscrire</h1>

        <div class="flex justify-center">
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.pseudo) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}

            <div class="validation text-end mt-2">
                <button type="submit" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Register</button>
            {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
